#:kivy 1.0.9

<Tinct>:
  id: tinct

  LightGroupPanel:
    size: (self.parent.size[0] / 2.5), self.parent.size[1]
    hue_bridge: tinct.hue_bridge

<LightGroupPanel>:
  ListView:
    item_strings: root.light_groups
    canvas.before:
      Color:
        rgb: 1,.5,0
      Rectangle:
        pos: self.pos
        size: self.size
