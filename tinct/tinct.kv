#:kivy 1.9.0

<GroupLights>:
  size: (self.parent.size[0] * 0.6), self.parent.size[1]

<LightGroupPanel>:
  size: (self.parent.size[0] / 2.5), self.parent.size[1]
  ListView:
    item_strings: root.light_groups
    canvas.before:
      Color:
        rgb: 1, 0.5, 0
      Rectangle:
        pos: self.pos
        size: self.size

<LightButton>:
  size_hint: (0.15,0.15)
  Image:
    source: self.parent.image_src
    y: self.parent.y
    x: self.parent.x
    size: self.parent.size
    allow_stretch: True

<Tinct>:
  id: tinct
  canvas.before:
    Color:
      rgba: 1, 1, 1, 1
    Rectangle:
      pos: self.pos
      size: self.size

  LightGroupPanel:
    id: light_groups
    hue_bridge: tinct.hue_bridge
  GroupLights:
    pos: (self.parent.size[0] * 0.4), 0
    padding: 50
    hue_bridge: tinct.hue_bridge
    selected_group: light_groups.selected_group
